#include<stdio.h>

int main(void){

        char choice[4];
        printf("Do you want to play more? (y or n)\n");
        scanf("%s", choice);

        printf("%s\n", choice);

        if (strcmp(choice, "yes") == 0) || strcmp(choice, "y") == 0 ) {
                printf("Hello\n");
                } else {
                printf("Bye\");
                }
        
        return 0;
}       
